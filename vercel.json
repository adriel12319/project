{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/client",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "api/ssr.js",
      "use": "@vercel/node@3",
      "config": {
        "maxDuration": 10,
        "memory": 1024
      }
    },
    {
      "src": "dist/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/assets/:path*.js",
      "destination": "/dist/client/assets/:path*.js"
    },
    {
      "source": "/assets/:path*.css",
      "destination": "/dist/client/assets/:path*.css"
    },
    {
      "source": "/assets/:path*.svg",
      "destination": "/dist/client/assets/:path*.svg"
    },
    {
      "source": "/vite.svg",
      "destination": "/dist/client/vite.svg"
    },
    {
      "source": "/((?!assets|api).*)",
      "destination": "/api/ssr.js"
    }
  ],
  "headers": [
    {
      "source": "/assets/:path*.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    },
    {
      "source": "/assets/:path*.css",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css"
        }
      ]
    },
    {
      "source": "/assets/:path*.svg",
      "headers": [
        {
          "key": "Content-Type",
          "value": "image/svg+xml"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Authorization"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
